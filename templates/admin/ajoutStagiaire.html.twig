{% extends 'template.html.twig' %}

{% block title %} Bienvenue {% endblock %}

{% block PageTitle %} {% endblock %}


{% block body %}
<section class="text-center mt-5">
  <div class="card mx-auto shadow" style="max-width: 600px;"> <!-- Ajout de la classe "mx-auto" pour centrer horizontalement la carte -->
    <div class="card-body py-5 px-md-5">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-10"> <!-- Réduction de la taille de la colonne à 10 colonnes pour centrer le contenu -->
          <h3 class="fw-bold mb-5">Ajouter un Stagiaire</h3>
          {{ form_start(form) }}
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  {{ form_row(form.prenom, {'attr': {'placeholder': 'Entrez votre prénom'}}) }}
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  {{ form_row(form.nom, {'attr': {'placeholder': 'Entrez votre nom'}}) }}
                </div>
              </div>
            </div>
            <div class="form-outline mb-4">
              {{ form_row(form.email) }}
            </div>
            <div class="form-outline mb-4">
              {{ form_row(form.password) }}
            </div>
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline mb-4">
                  {# {{ form_row(form.url_du_cv, {'attr': {'placeholder': 'Lien du CV'}}) }} #}
                {% if form.url_du_cv is defined %}
                  {{ form_row(form.url_du_cv, {'attr': {'placeholder': 'Lien du CV'}}) }}
                {% endif %}
                </div>

              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline mb-4">
                
                {% if form.url_du_cv is defined %}
                   {{ form_row(form.type_de_presence, {'attr': {'placeholder': 'Précense'}}) }}
                {% endif %}
                </div>
              </div>
                {{ form_row(form.submit) }}
            </div>
          {{ form_end(form) }}
           <p class="text-center text-secondary"><span class="text-danger">*</span> Champs obligatoires</p>
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}
    